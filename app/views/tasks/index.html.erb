<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <p>
    <input id="checkBox" type="checkbox" <%= task.completed == true ? "checked" : "" %>>
    <%= link_to task.title, task_path(task) %>

    <%= link_to ('<i class="fa fa-trash" aria-hidden="true"></i>').html_safe, task_path(task),
        method: :delete,
        data: { confirm: "Are you sure?" }  %>

  </p>

<% end %>


<i class="fa fa-plus" aria-hidden="true"><%= link_to " Add a new restaurant", new_task_path %></i>





